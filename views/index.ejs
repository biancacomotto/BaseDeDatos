<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieWeb</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: auto;
            background-image: url('https://i.pinimg.com/736x/8b/3a/c4/8b3ac4b1a29ddb77d6dfe21e466240e0.jpg');
            background-size: cover;
            background-position: center;
            padding-top: 20px;
        }

        canvas {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 80px;
            color: #000;
            background-color: rgba(255, 223, 0, 0.7);
            margin-bottom: 20px;
            padding: 10px 30px;
            border-radius: 30px;
            transition: transform 0.3s ease, font-size 0.3s ease;
        }

        h1:hover {
            transform: scale(1.2);
            font-size: 100px;
        }

        .button-group {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .button {
            background-color: #FFDF00;
            color: #000;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .button:hover {
            background-color: #ffffff;
            color: #000;
        }

        .user-welcome {
            color: #ffffff;
            font-size: 18px;
            margin-right: 10px;
        }

        form {
            text-align: center;
            margin-top: 150px;
            display: flex;
            justify-content: center;
        }

        .search-bar {
            display: flex;
            align-items: center;
            padding: 15px;
            border: 2px solid yellow;
            border-radius: 50px;
            width: 80%;
            max-width: 800px;
            background-color: black;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .search-bar input[type="text"] {
            padding: 15px;
            border: none;
            outline: none;
            font-size: 24px;
            width: 70%;
            color: white;
            background-color: black;
            border-right: 1px solid yellow;
        }

        .search-bar select {
            border: none;
            padding: 15px;
            font-size: 20px;
            color: white;
            background-color: black;
            outline: none;
            cursor: pointer;
        }

        .search-bar select option:hover {
            background-color: yellow;
            color: black;
        }

        .search-bar button[type="submit"] {
            background-color: yellow;
            color: black;
            border: none;
            padding: 15px 30px;
            font-size: 24px;
            cursor: pointer;
            border-radius: 0 25px 25px 0;
            transition: background-color 0.3s ease;
        }

        .search-bar button[type="submit"]:hover {
            background-color: black;
            color: yellow;
        }
    </style>
</head>
<body>
<canvas id="canvas"></canvas>

<h1>MovieWeb üé¨</h1>

<div class="button-group">
    <% if (isLoggedIn) { %>
        <span class="user-welcome">Hola, <%= username %>!</span>
        <button onclick="window.location.href='/users'" class="button">Listar Usuarios</button>
        <button onclick="window.location.href='/profile'" class="button">Perfil</button>
        <form action="/logout" method="POST" style="margin: 0;">
            <button type="submit" class="button">Cerrar sesi√≥n</button>
        </form>
    <% } else { %>
        <button onclick="window.location.href='/users'" class="button">Listar Usuarios</button>
        <button onclick="window.location.href='/login'" class="button">Iniciar Sesi√≥n</button>
        <button onclick="window.location.href='/register'" class="button">Registrarse</button>
    <% } %>
</div>

<form action="/buscar" method="GET">
    <div class="search-bar">
        <input type="text" name="q" placeholder="Buscar..." required />
        <select name="tipoBusqueda" required>
            <option value="movie">Pel√≠culas</option>
            <option value="actor">Actores</option>
            <option value="keyword">Keywords</option>
            <option value="director">Directores</option>
        </select>
        <button type="submit">Buscar</button>
    </div>
</form>

<script>
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const particlesArray = [];
    const numberOfParticles = 100;
    const image = new Image();
    image.src = 'https://goldenribbon.co/wp-content/uploads/2023/12/Pochoclo-2.png';

    class Particle {
        constructor() {
            this.x = Math.random() * canvas.width;
            this.y = Math.random() * canvas.height;
            this.size = Math.random() * 20 + 15;
            this.speedX = Math.random() * 2 - 1;
            this.speedY = Math.random() * 2 - 1;
        }

        update() {
            this.x += this.speedX;
            this.y += this.speedY;

            if (this.x < 0 || this.x > canvas.width) this.speedX *= -1;
            if (this.y < 0 || this.y > canvas.height) this.speedY *= -1;
        }

        draw() {
            ctx.drawImage(image, this.x, this.y, this.size, this.size);
        }
    }

    function init() {
        for (let i = 0; i < numberOfParticles; i++) {
            particlesArray.push(new Particle());
        }
    }

    function animate() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        particlesArray.forEach(particle => {
            particle.update();
            particle.draw();
        });
        requestAnimationFrame(animate);
    }

    image.onload = () => {
        init();
        animate();
    };

    window.addEventListener('resize', () => {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        particlesArray.length = 0;
        init();
    });
</script>
</body>
</html>