<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieWeb</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet"> <!-- Fuente Poppins -->
    <style>
        body {
            font-family: 'Poppins', sans-serif; /* Fuente Poppins */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: auto; /* Permitir el desplazamiento */
            position: relative;
            background-image: url('https://www.publicdomainpictures.net/pictures/30000/nahled/film-background-1334067869u9d.jpg'); /* Fondo de pel칤cula */
            background-size: cover;
            background-position: center;
            padding-top: 20px; /* Espacio arriba */
        }

        canvas {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        h1 {
            font-family: 'Poppins', sans-serif; /* Fuente Poppins */
            font-size: 80px; /* Aumentar el tama침o del t칤tulo */
            color: #ffffff;
            background-color: rgba(0, 0, 0, 0.7); /* Fondo negro con opacidad */
            margin-bottom: 20px;
            padding: 10px 30px;
            border-radius: 30px;
            transition: transform 0.3s ease, font-size 0.3s ease; /* Transici칩n suave */
        }

        h1:hover {
            transform: scale(1.2); /* Agrandar el texto */
            font-size: 100px; /* Aumentar el tama침o al pasar el mouse */
        }

        .button-group {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .button {
            background-color: #000;
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-size: 18px;
            font-family: 'Poppins', sans-serif; /* Fuente Poppins para los botones */
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease; /* Transici칩n suave */
        }

        .button:hover {
            background-color: #ffffff; /* Cambiar a blanco */
            color: #000; /* Cambiar el texto a negro para contraste */
            transform: scale(1.1); /* Aumentar el tama침o del texto */
            box-shadow: 0 0 10px rgba(44, 134, 224, 0.7); /* Resplandor azul */
        }

        .user-welcome {
            color: #ffffff;
            font-size: 18px;
            margin-right: 10px;
            font-family: 'Poppins', sans-serif; /* Fuente Poppins */
        }

        form {
            text-align: center;
            margin-top: 150px; /* Aumentar el margen superior para m치s desplazamiento */
        }

        .search-bar {
            display: flex;
            align-items: center;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 50px; /* Hacer los bordes m치s redondeados */
            width: 80%;
            max-width: 800px; /* Limitar el ancho m치ximo */
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15); /* Sombra para darle m치s profundidad */
        }

        .search-bar input[type="text"] {
            padding: 15px;
            border: none;
            outline: none;
            font-size: 24px; /* Aumentar tama침o de texto */
            border-radius: 25px 0 0 25px;
            width: 70%;
            font-family: 'Poppins', sans-serif; /* Fuente Poppins */
        }

        .search-bar select {
            border: none;
            padding: 15px;
            font-size: 20px; /* Aumentar tama침o de fuente */
            background-color: #f0f0f0;
            border-radius: 0;
            margin-left: -5px;
            outline: none;
            cursor: pointer;
            font-family: 'Poppins', sans-serif; /* Fuente Poppins */
        }

        .search-bar button[type="submit"] {
            background-color: #000;
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 24px; /* Aumentar tama침o de fuente */
            font-family: 'Poppins', sans-serif; /* Fuente Poppins */
            cursor: pointer;
            border-radius: 0 25px 25px 0;
            transition: background-color 0.3s ease;
        }

        .search-bar button[type="submit"]:hover {
            background-color: #2c86e0;
        }
    </style>
</head>
<body>
<canvas id="canvas"></canvas>

<h1>MovieWeb游꿟</h1>

<div class="button-group">
    <% if (isLoggedIn) { %>
        <span class="user-welcome">Hola, <%= username %>!</span>
        <button onclick="window.location.href='/users'" class="button">Listar Usuarios</button>
        <button onclick="window.location.href='/profile'" class="button">Perfil</button>
        <form action="/logout" method="POST" style="display:inline;">
            <button type="submit" class="button">Cerrar sesi칩n</button>
        </form>
    <% } else { %>
        <button onclick="window.location.href='/users'" class="button">Listar Usuarios</button>
        <button onclick="window.location.href='/login'" class="button">Iniciar Sesi칩n</button>
        <button onclick="window.location.href='/register'" class="button">Registrarse</button>
    <% } %>
</div>

<form action="/buscar" method="GET">
    <div class="search-bar">
        <input type="text" name="q" placeholder="Buscar..." required />
        <select name="tipoBusqueda" required>
            <option value="movie">Pel칤culas</option>
            <option value="actor">Actores</option>
            <option value="keyword">Keywords</option>
            <option value="director">Directores</option>
        </select>
        <button type="submit">Buscar</button>
    </div>
</form>

<script>
    // Configuraci칩n de part칤culas de "pochoclos"
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const particlesArray = [];
    const numberOfParticles = 100;
    const image = new Image();
    image.src = 'https://goldenribbon.co/wp-content/uploads/2023/12/Pochoclo-2.png'; // URL de la imagen de pochoclo

    class Particle {
        constructor() {
            this.x = Math.random() * canvas.width;
            this.y = Math.random() * canvas.height;
            this.size = Math.random() * 20 + 15; // Tama침o de los pochoclos
            this.speedX = Math.random() * 2 - 1;
            this.speedY = Math.random() * 2 - 1;
        }

        update() {
            this.x += this.speedX;
            this.y += this.speedY;

            // Rebote de part칤culas en los bordes
            if (this.x < 0 || this.x > canvas.width) this.speedX *= -1;
            if (this.y < 0 || this.y > canvas.height) this.speedY *= -1;
        }

        draw() {
            // Dibujar cada "pochoclo" como una imagen
            ctx.drawImage(image, this.x, this.y, this.size, this.size);
        }
    }

    function init() {
        for (let i = 0; i < numberOfParticles; i++) {
            particlesArray.push(new Particle());
        }
    }

    function animate() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        particlesArray.forEach(particle => {
            particle.update();
            particle.draw();
        });
        requestAnimationFrame(animate);
    }

    image.onload = () => {
        init();
        animate();
    };

    window.addEventListener('resize', () => {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        particlesArray.length = 0;
        init();
    });
</script>
</body>
</html>
