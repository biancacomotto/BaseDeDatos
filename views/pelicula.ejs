<!DOCTYPE html>
<html>
<head>
    <title><%= movie.title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1><%= movie.title %></h1>
    <h3>Fecha: <%= movie.release_date %></h3>

    <!-- Formulario para agregar pel铆cula a favoritos -->
 <form action="/agregar-pelicula" method="POST">
     <input type="hidden" name="movieId" value="<%= movie.id %>">
     <label for="rating">Calificaci贸n:</label>
     <input type="number" name="rating" min="1" max="5" required>
     <label for="opinion">Opini贸n:</label>
     <textarea name="opinion" required></textarea>
     <button type="submit">Agregar a favoritos</button>
 </form>


    <!-- Dirigida por -->
    <div class="info-box">
        <div class="info-box-title">Dirigida por</div>
        <div class="info-box-content">
            <ul>
                <% movie.directors.forEach((director) => { %>
                    <li>
                        <a href="/director/<%= director.crew_member_id %>"><%= director.crew_member_name %></a>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>

<!-- Escrita por -->
<div class="info-box">
    <div class="info-box-title">Escrita por</div>
    <div class="info-box-content">
        <ul>
            <% movie.writers.forEach((writer) => { %>
                <li>
                    <%= writer.crew_member_name %>
                </li>
            <% }); %>
        </ul>
    </div>
</div>

<!-- Argumento -->
<div class="info-box-argument">
    <div class="info-box-title">Argumento</div>
    <div class="info-box-content">
        <p><%= movie.overview %></p>
    </div>
</div>

<!-- Elenco -->
<div class="info-box info-box-elenco">
    <div class="info-box-title">Elenco</div>
    <div class="info-box-content">
        <ul>
            <% movie.cast.sort((a, b) => a.cast_order - b.cast_order).forEach((actor) => { %>
                <li><a href="/actor/<%= actor.actor_id %>"><%= actor.actor_name %></a> - <%= actor.character_name %></li>
            <% }); %>
        </ul>
    </div>
</div>

<!-- Crew -->
<div class="info-box">
    <div class="info-box-title">Crew</div>
    <div class="info-box-content">
        <ul>
            <% movie.crew.forEach((crewMember) => { %>
                <li>
                    <%= crewMember.crew_member_name %> - <%= crewMember.department_name %> (<%= crewMember.job %>)
                </li>
            <% }); %>
        </ul>
    </div>
</div>

<!-- Palabras clave (Keywords) -->
<div class="container-card">
    <div class="card">
        <!-- Aqu铆 omitimos la figura y la imagen, manteniendo el contenido -->
        <div class="contenido-card">
            <!-- Mantendremos el 铆cono y el t铆tulo como estaban en el c贸digo original -->
            <div class="info-box-icon"></div>
            <h3>Palabras Clave</h3>
            <p>
                <!-- Aqu铆 mantenemos la l贸gica de las palabras clave -->
            <ul>
                <% if (Array.isArray(movie.keywords) && movie.keywords.length > 0) { %>
                    <% movie.keywords.forEach((keyword) => { %>
                        <li><%= keyword %></li>
                    <% }); %>
                <% } else { %>
                    <li>No hay palabras clave disponibles.</li>
                <% } %>
            </ul>
            </p>
            <a href="#">Leer Ms</a>
        </div>
    </div>
</div>



<!-- Idiomas -->
<div class="info-box">
    <div class="info-box-title">Idiomas</div>
    <div class="flag-container">
        <div class="flag-circle">
            <img src="/united-states-of-america.png" alt="Ingl茅s"> <!-- Bandera de Estados Unidos -->
        </div>
        <div class="flag-circle">
            <img src="/round.png" alt="Portugu茅s"> <!-- Bandera de Brasil -->
        </div>
        <div class="flag-circle">
            <img src="/world.png" alt="Espa帽ol"> <!-- Bandera de Espa帽a -->
        </div>
    </div>
    <div class="info-box-content">
        <ul>
            <% if (Array.isArray(movie.languages) && movie.languages.length > 0) { %>
                <% movie.languages.forEach((language) => { %>
                    <li><%= language %></li>
                <% }); %>
            <% } else { %>
                <li>No hay idiomas disponibles.</li>
            <% } %>
        </ul>
    </div>
</div>

<!-- G茅neros -->
<div class="info-box">
    <div class="info-box-title">G茅neros</div>
    <div class="info-box-content">
        <ul>
            <% if (Array.isArray(movie.genres) && movie.genres.length > 0) { %>
                <% movie.genres.forEach((genre) => { %>
                    <li><%= genre %></li>
                <% }); %>
            <% } else { %>
                <li>No hay g茅neros disponibles.</li>
            <% } %>
        </ul>
    </div>
</div>

<!-- Pa铆ses de Producci贸n -->
<div class="info-box">
    <div class="info-box-title">Pa铆ses de Producci贸n</div>
    <div class="info-box-content">
        <ul>
            <% if (Array.isArray(movie.companies) && movie.companies.length > 0) { %>
                <%
                    const paisesUnicos = new Set();
                    movie.companies.forEach((company) => {
                        paisesUnicos.add(company.country_name);
                    });

                Array.from(paisesUnicos).forEach((country) => { %>
                    <li><%= country %></li>
                <% }); %>
            <% } else { %>
                <li>No hay pa铆ses de producci贸n disponibles.</li>
            <% } %>
        </ul>
    </div>
</div>

<!-- Empresas de Producci贸n -->
<div class="info-box">
    <div class="info-box-title">Empresas de Producci贸n</div>
    <div class="info-box-content">
        <ul>
            <% if (Array.isArray(movie.companies) && movie.companies.length > 0) { %>
                <% movie.companies.forEach((company) => { %>
                    <li><%= company.company_name %> (Pa铆s: <%= company.country_name %>)</li>
                <% }); %>
            <% } else { %>
                <li>No hay empresas de producci贸n disponibles.</li>
            <% } %>
        </ul>
    </div>
</div>

<p></p>
<!-- Bot贸n para volver al buscador -->
<div id="inicio"><a href="/">Inicio</a></div>

</body>
</html>
