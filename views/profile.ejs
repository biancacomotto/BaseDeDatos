<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Perfil de <%= username %></title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(120deg, #0093E9 0%, #80D0C7 100%);
            color: #333;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        h1, h2 {
            color: #333;
            margin-bottom: 15px;
            text-align: center;
        }

        .container {
            width: 100%;
            max-width: 800px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

        .section {
            margin-top: 20px;
        }

        .section h3 {
            color: #007bff;
            font-size: 1.4em;
            margin-bottom: 15px;
        }

        .movie-item {
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 10px;
            background-color: #f9f9f9;
        }

        .movie-item h4 {
            margin: 0;
            color: #333;
        }

        .movie-item p {
            margin: 5px 0;
            font-size: 0.9em;
        }

        .button {
            display: inline-block;
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

        .button:hover {
            background-color: #0056b3;
        }

        .no-movies {
            font-size: 1em;
            color: #555;
        }
    </style>
</head>
<body>
    <h1>Bienvenido, <%= username %></h1>

    <div class="container">
        <!-- Sección de Películas Calificadas -->
        <div class="section">
            <h3>Películas Calificadas</h3>
            <% if (calificadas.length > 0) { %>
                <% calificadas.forEach(movie => { %>
                    <div class="movie-item">
                        <h4><%= movie.title %></h4>
                        <p>Calificación: <strong><%= movie.rating %>/5</strong></p>
                        <p>Opinión: <%= movie.opinion %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="no-movies">No has calificado ninguna película.</p>
            <% } %>
        </div>

        <!-- Sección de Películas Favoritas -->
        <div class="section">
            <h3>Películas Favoritas</h3>
            <% if (favoritos.length > 0) { %>
                <% favoritos.forEach(movie => { %>
                    <div class="movie-item">
                        <h4><%= movie.title %></h4>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="no-movies">No has agregado ninguna película a tus favoritos.</p>
            <% } %>
        </div>
    </div>

    <!-- Botón para volver al inicio -->
    <a href="/" class="button">Volver al inicio</a>
</body>
</html>
