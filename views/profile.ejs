<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Perfil de <%= username %></title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: radial-gradient(circle, rgb(14, 151, 201) 0%, rgb(15, 100, 169) 40%, rgb(5, 34, 98) 100%);
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h2 {
            margin-bottom: 20px;
            text-align: center;
        }

        .movie-list {
            max-width: 600px;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 20px;
            border-radius: 10px;
        }

        .movie-item {
            margin-bottom: 15px;
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

        .movie-item:last-child {
            border-bottom: none;
        }
    </style>
</head>
<body>
    <h2>Perfil de <%= username %></h2>

    <div class="movie-list">
        <h3>Películas en tu lista:</h3>
        <% if (movies.length > 0) { %>
            <% movies.forEach(movie => { %>
                <div class="movie-item">
                    <h4><%= movie.title %></h4>
                    <p>Calificación: <%= movie.rating %>/5</p>
                    <p>Opinión: <%= movie.opinion %></p>
                </div>
            <% }) %>
        <% } else { %>
            <p>No has agregado películas a tu lista.</p>
        <% } %>
    </div>
</body>
</html>
