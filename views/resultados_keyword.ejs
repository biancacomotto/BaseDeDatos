<!-- views/resultados_keyword.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Resultados de Búsqueda</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
<h1>Resultados de Búsqueda para: <%= keyword %></h1>
<% if (movies.length > 0) { %>
    <ul>
        <% movies.forEach(movie => { %>
            <li>
                <a href="/pelicula/<%= movie.id %>"><%= movie.title %></a>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No se encontraron películas para esta palabra clave.</p>
<% } %>
<a href="/search_keyword">Volver a buscar</a>
</body>
</html>
